<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Cognifyz Internship</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="d-flex flex-column min-vh-100">
  <%- include('components/navbar.ejs') %>




    <div class="container mt-5">
      <h1 class="text-center text-light">Student All Records</h1>
      <div class="text-center my-3">

        <a href="/api/students/registrationPage" class="text-center btn btn-info text-light fw-bold fs-4">Add new Records</a>
      </div>
      <table class="table table-striped border ">
        <thead>
          <tr>
            <th scope="col">Si. No.</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <!-- <th scope="col">Phone</th> -->
            <th scope="col">Show</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach((item, Sno) => { %>
            <tr>
              <th scope="row"><%= Sno + 1 %></th>
              <td><%= item.name %></td>
              <td><%= item.email %></td>
              <!-- <td><%= item.phone %></td> -->
              <td><a href="/api/students/studentData/<%= item._id %>" class="btn btn-info">Show</a></td>
              <td><a href="/api/students/deleteStudent/<%= item._id %>" class="btn btn-danger">Delete</a></td>
              <td><a href="/api/students/updatePage/<%= item._id %>" class="btn btn-info">Update</a></td>
            </tr>
          <% }) %>

        </tbody>
      </table>
    </div>
